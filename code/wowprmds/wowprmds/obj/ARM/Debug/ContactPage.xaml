<Page
    x:Class="wowprmds.ContactPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wowprmds"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid x:ConnectionId='2' x:Name="MainGrid" Background="#FFC4D6A0">
            <TextBlock x:ConnectionId='3' x:Name="ContactIdTextBlock" Margin="32,27,1381,1141" Text="Contact ID" TextWrapping="Wrap"/>
            <Button x:ConnectionId='4' x:Name="SaveButton" Content="Save" Margin="34,937,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:ConnectionId='5' x:Name="CloseButton" Content="Close" Margin="129,937,0,0" VerticalAlignment="Top" Width="74"/>
            <TextBlock x:ConnectionId='6' x:Name="FirstNameTextBlock" HorizontalAlignment="Left" Margin="32,57,0,0" Text="First Name" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBlock x:ConnectionId='7' x:Name="LastNameTextBlock" HorizontalAlignment="Left" Margin="32,90,0,0" Text="Last Name" TextWrapping="Wrap" VerticalAlignment="Top"/>

        </Grid>
    </ScrollViewer>
</Page>

